<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnikLak.Subsystems.Tools.ToolsList"
             Title="Инструменты">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <ScrollView>
            <VerticalStackLayout x:Name="_stackLayout" Background="#BFB49F" Padding="5,5,5,110">

            </VerticalStackLayout>
        </ScrollView>

        <ImageButton Source="plus_white.svg"
                         WidthRequest="80"
                         HeightRequest="80"
                         CornerRadius="40"
                         BackgroundColor="#401D09"
                         HorizontalOptions="End"
                         VerticalOptions="End"
                         Margin="20"
                         Padding="20"
                         Clicked="AddNewToolClicked"/>

    </Grid>
</ContentPage>