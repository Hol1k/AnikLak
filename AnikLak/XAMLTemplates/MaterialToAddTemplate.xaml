<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnikLak.XAMLTemplates.MaterialToAddTemplate">

    <Grid Margin="9,5,9,5" ColumnSpacing="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <Border Background="#338C7E6C"  Stroke="#338C7E6C" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5"
                Grid.Column="0">
            <Entry Text="Апельсиновые палочки" Margin="5,0,5,0" TextColor="Black" FontSize="20" FontAttributes="Bold"
                   x:Name="name"/>
        </Border>
        
        <Border Background="#338C7E6C"  Stroke="#338C7E6C" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5"
                Grid.Column="1">
            <Entry Text="1" Margin="5,0,5,0" TextColor="Black" FontSize="20" FontAttributes="Bold"
                   x:Name="count"/>
        </Border>

    </Grid>
    
</ContentView>
