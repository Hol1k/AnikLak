<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnikLak.XAMLTemplates.AppointmentEditingFields.AppointmentServiceTemplate">
    <Border Background="#338C7E6C" Stroke="#338C7E6C" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5"
            Margin="2" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Text="• Услуга(800)" FontSize="20" TextColor="#BF000000" FontAttributes="Bold"
               LineBreakMode="TailTruncation" VerticalOptions="Center"
               x:Name="_serviceName" Grid.Column="0"/>
            <Button ImageSource="x.svg" HorizontalOptions="End" Scale="1.5" Margin="-10" Padding="0" BackgroundColor="#00000000"
                    BorderWidth="0" VerticalOptions="Center" CornerRadius="2" Clicked="RemoveSrvice"
                    Grid.Column="1"/>
        </Grid>
    </Border>
</ContentView>
