<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="AnikLak.Subsystems.Appointments.ChangeAppointmentStatusPopup"
               VerticalOptions="End"
               HorizontalOptions="Fill"
               Color="#00000000">

    <Border Background="#BFB49F" Stroke="#BFB49F" StrokeThickness="0" StrokeShape="RoundRectangle 10,10,0,0">
        <VerticalStackLayout>

            <Border Background="#808C7E6C" Stroke="#808C7E6C" StrokeThickness="1" StrokeShape="RoundRectangle 10,10,10,10"
                    Margin="5" VerticalOptions="Center" HorizontalOptions="Fill">
                <Button Background="#00000000" Text="Подтверждена" TextColor="#BF000000" FontAttributes="Bold" FontSize="18"
                        Clicked="ChangeStatus" Padding="7,0,7,0"/>
            </Border>

            <Border Background="#808C7E6C" Stroke="#808C7E6C" StrokeThickness="1" StrokeShape="RoundRectangle 10,10,10,10"
                    Margin="5" VerticalOptions="Center" HorizontalOptions="Fill">
                <Button Background="#00000000" Text="Выполнена" TextColor="#BF000000" FontAttributes="Bold" FontSize="18"
                        Clicked="ChangeStatus" Padding="7,0,7,0"/>
            </Border>

            <Border Background="#808C7E6C" Stroke="#808C7E6C" StrokeThickness="1" StrokeShape="RoundRectangle 10,10,10,10"
                    Margin="5" VerticalOptions="Center" HorizontalOptions="Fill">
                <Button Background="#00000000" Text="Отменена" TextColor="#BF000000" FontAttributes="Bold" FontSize="18"
                        Clicked="ChangeStatus" Padding="7,0,7,0"/>
            </Border>

        </VerticalStackLayout>
    </Border>

</toolkit:Popup>
