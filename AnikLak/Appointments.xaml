<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnikLak.Appointments"
             Title="Записи">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollView Background="#BFB49F">
            <VerticalStackLayout x:Name="stackLayout" Padding="5" Margin="0,0,0,120">
                <!--Список записей-->
            </VerticalStackLayout>
        </ScrollView>

        <ImageButton Source="plus_white.svg"
                     WidthRequest="80"
                     HeightRequest="80"
                     CornerRadius="40"
                     BackgroundColor="#401D09"
                     HorizontalOptions="End"
                     VerticalOptions="End"
                     Margin="20"
                     Padding="20"
                     Clicked="AddNewClientClicked"/>

    </Grid>
</ContentPage>